<div ng-cloak ng-controller="LayoutController">
	<!-- BIG Navbar -->
	<nav id="fms-headbar" class="navbar navbar-default navbar-fixed-top visible-lg-inline">
		<div class="container-fluid">
		</div>
	</nav>
	<!-- /BIG Navbar -->

	<!-- Small Navbar -->
	<nav id="fms-headbar"
		class="navbar navbar-default navbar-fixed-top visible-md-inline visible-sm-inline visible-xs-inline"
	>
		<div class="container-fluid">
			<div>
				<ul class="nav navbar-nav">
					<li>
						<div class="fms-brand" style="position: relative; margin-right: 18px;">
							<a href="/app/">
								Home
							</a>
						</div>
						<a ng-click="menuClicked()" class="pull-right" style="margin-right: 18px;">
							<i class="fa fa-bars fa-lg"></i>
						</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
	<div class="visible-md-block visible-sm-block visible-xs-block"
		style="height: 90px; width: 99%;"
	></div>
	<ul ng-show="showMenu" 
		class="list-group visible-md-inline visible-sm-inline visible-xs-inline"
	>
		<li class="list-group-item">
			<a ng-show="!accessAccount" style="cursor: pointer;"
				ng-click="logIn(); menuClicked(false)"
			>Account</a>
			<a ng-show="accessAccount" href="/app/account/" ng-click="menuClicked(false)">
				Account
			</a>
		</li>
		<li class="list-group-item">
			<a href="/app/cart" ng-click="menuClicked(false)">
				<i class="fa fa-shopping-cart"></i> &nbsp;Cart
			</a>
		</li>
		<li class="list-group-item">
			<span class="managementLink" ng-click="logOut()">Log Out</span><br/>
		</li>
	</ul>
	<!-- /Small Navbar -->
</div>

<div ng-controller="MessageController" id="fms-messenger" ng-cloak>
  <alert type="{{alertType}}" ng-show="userMessage" close="close()">
    <strong ng-show="title">{{title}}&nbsp;</strong>
    {{userMessage}}
  </alert>
</div>

<div class="container" id="fms-main-container">
  <div id="fms-main">
    <div ng-view></div>
  </div>
</div>

<nav class="navbar navbar-default navbar-fixed-bottom" ng-controller="LayoutController">
	<div class="container">
		<span class="footerLink" ng-click="logOut()">Log Out</span>
	</div>
</nav>

<!-- Hack for ensuring event-based services are instantiated -->
<div ng-controller="LoadServices" style="display:none;" aria-hidden="true"></div>

